<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lim" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/lim_bgreen</item>
        <item name="colorPrimaryDark">@color/lim_bgreen_d</item>
        <item name="colorPrimaryVariant">@color/lim_bgreen_w</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorButtonNormal">@null</item>
        <item name="android:actionBarSize">51dp</item>
        <item name="android:fontFamily">@font/binggraesamanco</item>
    </style>

    <style name="FullScreenDialogTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:statusBarColor">@color/lim_bgreen</item>
        <item name="android:windowNoTitle">true</item>
        <item name = "android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>
</resources>