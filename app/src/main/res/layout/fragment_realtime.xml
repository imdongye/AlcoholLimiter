<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lim_back_d"
    android:layout_gravity="fill_vertical"
    tools:context=".RealtimeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--select-->
            <include layout="@layout/realtime_select"/>
            <!--main-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                app:cardBackgroundColor="@color/lim_back"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/main_type_name"
                        android:layout_width="100dp"
                        android:layout_height="41dp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/binggraesamancobold"
                        android:gravity="center"
                        android:text="소주"
                        android:textColor="@color/lim_text_black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.058"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.066" />
                    <ImageButton
                        android:id="@+id/main_bottle_btn"
                        android:layout_width="99dp"
                        android:layout_height="98dp"
                        android:background="@drawable/bg_white_ripple"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_soju_bottle"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.058"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/main_type_name"
                        app:layout_constraintVertical_bias="0.156" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.09"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/main_bottle_btn"
                        app:layout_constraintVertical_bias="0.2">

                        <EditText
                            android:id="@+id/main_edit_alcohol"
                            android:layout_width="59dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/binggraesamanco"
                            android:gravity="center_horizontal"
                            android:inputType="numberDecimal"
                            android:text="17.5" />

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/binggraesamancobold"
                            android:gravity="center_vertical"
                            android:text="%"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.09"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                        app:layout_constraintVertical_bias="0.1">

                        <EditText
                            android:id="@+id/main_edit_ml"
                            android:layout_width="59dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/binggraesamanco"
                            android:gravity="center_horizontal"
                            android:inputType="numberDecimal"
                            android:text="360" />

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/binggraesamanco"
                            android:gravity="center_vertical"
                            android:text="ml"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <com.example.alcohollimiter.RoundedDashView
                        android:id="@+id/roundedDashView"
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.079"
                        app:layout_constraintStart_toEndOf="@+id/main_bottle_btn"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>